@inherits LayoutComponentBase

<PageTitle>TheArchiver Monitor</PageTitle>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    <!-- Modern Top Navigation -->
    <nav class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Brand -->
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <span class="text-2xl mr-2">üì¶</span>
                        <h1 class="text-xl font-bold text-gray-900 dark:text-gray-100">TheArchiver Monitor</h1>
                    </div>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <NavLink href="" Match="NavLinkMatch.All" 
                                 class="px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20"
                                 ActiveClass="bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">
                            <span class="mr-2">üè†</span>Dashboard
                        </NavLink>
                        <NavLink href="download-queue"
                                 class="px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20"
                                 ActiveClass="bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">
                            <span class="mr-2">üì•</span>Queue
                        </NavLink>
                        <NavLink href="failed-downloads"
                                 class="px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20"
                                 ActiveClass="bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300">
                            <span class="mr-2">‚ùå</span>Failed
                        </NavLink>
                        <NavLink href="console-output"
                                 class="px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-green-600 dark:hover:text-green-400 hover:bg-green-50 dark:hover:bg-green-900/20"
                                 ActiveClass="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300">
                            <span class="mr-2">üñ•Ô∏è</span>Console
                        </NavLink>
                    </div>
                </div>

                <!-- Right side controls -->
                <div class="flex items-center space-x-4">
                    <!-- Dark Mode Toggle -->
                    <button type="button" @onclick="ToggleDarkMode"
                            class="inline-flex items-center p-2 rounded-md text-gray-400 dark:text-gray-500 hover:text-gray-500 dark:hover:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors duration-200"
                            title="Toggle dark mode">
                        <span class="sr-only">Toggle dark mode</span>
                        <span class="text-lg dark:hidden">üåô</span>
                        <span class="text-lg hidden dark:inline">‚òÄÔ∏è</span>
                    </button>

                    <!-- System Status Indicator (Desktop) -->
                    <div class="hidden lg:flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse mr-2"></div>
                        System Online
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" @onclick="ToggleMobileMenu"
                                class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 dark:text-gray-500 hover:text-gray-500 dark:hover:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition-colors duration-200">
                            <span class="sr-only">Open main menu</span>
                            @if (mobileMenuOpen)
                            {
                                <span class="text-xl">‚úï</span>
                            }
                            else
                            {
                                <span class="text-xl">‚ò∞</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden @(mobileMenuOpen ? "block" : "hidden")">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
                <NavLink href="" Match="NavLinkMatch.All" @onclick="CloseMobileMenu"
                         class="block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20"
                         ActiveClass="bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">
                    <span class="mr-2">üè†</span>Dashboard
                </NavLink>
                <NavLink href="download-queue" @onclick="CloseMobileMenu"
                         class="block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20"
                         ActiveClass="bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">
                    <span class="mr-2">üì•</span>Download Queue
                </NavLink>
                <NavLink href="failed-downloads" @onclick="CloseMobileMenu"
                         class="block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20"
                         ActiveClass="bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300">
                    <span class="mr-2">‚ùå</span>Failed Downloads
                </NavLink>
                <NavLink href="console-output" @onclick="CloseMobileMenu"
                         class="block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 text-gray-600 dark:text-gray-300 hover:text-green-600 dark:hover:text-green-400 hover:bg-green-50 dark:hover:bg-green-900/20"
                         ActiveClass="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300">
                    <span class="mr-2">üñ•Ô∏è</span>Console Output
                </NavLink>
                
                <!-- Mobile Status and Dark Mode -->
                <div class="px-3 py-2 border-t border-gray-200 dark:border-gray-700 mt-3 space-y-2">
                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse mr-2"></div>
                        System Online
                    </div>
                    <button type="button" @onclick="ToggleDarkMode"
                            class="flex items-center text-sm text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100">
                        <span class="dark:hidden mr-2">üåô</span>
                        <span class="hidden dark:inline mr-2">‚òÄÔ∏è</span>
                        <span class="dark:hidden">Dark Mode</span>
                        <span class="hidden dark:inline">Light Mode</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="flex-1">
        @Body
    </main>
</div>

@code {
    private bool mobileMenuOpen = false;

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        mobileMenuOpen = false;
    }

    private async Task ToggleDarkMode()
    {
        await IJSRuntime.InvokeVoidAsync("darkModeManager.toggle");
    }
}

@inject IJSRuntime IJSRuntime
